# Docker Environment Variables Template
# These variables are used by docker-compose.yml for service-specific env files
# Copy this to .env in the deployment/ directory and fill in your values

# ===== BINANCE API (Required for all services) =====
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ===== AWS CONFIGURATION (Production) =====
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=bitcoin-data-lake-prod
AWS_KINESIS_STREAM_TRADES=market-trade-stream-prod
AWS_KINESIS_STREAM_DEPTH=market-depth-stream-prod
AWS_KINESIS_STREAM_TICKER=market-bestbidask-stream-prod

# ===== REDIS CONFIGURATION (Production) =====
REDIS_HOST=redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
REDIS_SSL=true

# ===== DATABASE CONFIGURATION (Production) =====
DB_HOST=bitcoin-pipeline-prod.cluster-xyz.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=bitcoin_pipeline_prod
DB_USER=bitcoin_app
DB_PASSWORD=your_secure_db_password
DB_SSL_MODE=require

# ===== DOCKER COMPOSE OVERRIDES =====
# These can override individual service settings if needed
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK_NAME=bitcoin-pipeline
DOCKER_LOG_DRIVER=awslogs

# ===== MONITORING =====
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000