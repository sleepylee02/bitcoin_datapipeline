# Aggregator Service - Docker Environment
# Production environment variables for Aggregator service

# ===== AWS CONFIGURATION =====
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION}
AWS_KINESIS_STREAM_TRADES=${AWS_KINESIS_STREAM_TRADES}
AWS_KINESIS_STREAM_DEPTH=${AWS_KINESIS_STREAM_DEPTH}

# ===== REDIS CONFIGURATION =====
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_DB=${REDIS_DB}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_SSL=${REDIS_SSL}

# ===== SERVICE CONFIGURATION =====
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# ===== AGGREGATOR SPECIFIC =====
AGGREGATOR_LOG_LEVEL=INFO
AGGREGATOR_BATCH_SIZE=1000
AGGREGATOR_FLUSH_INTERVAL=5
AGGREGATOR_REDIS_TTL=3600

# ===== HEALTH CHECK =====
HEALTH_CHECK_PORT=8080
METRICS_PORT=8081