# REST Ingestor Service - Docker Environment
# Production environment variables for REST Ingestor service

# ===== BINANCE API =====
BINANCE_API_KEY=${BINANCE_API_KEY}
BINANCE_API_SECRET=${BINANCE_API_SECRET}
BINANCE_REST_BASE_URL=https://data-api.binance.vision

# ===== AWS CONFIGURATION =====
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION}
AWS_S3_BUCKET=${AWS_S3_BUCKET}

# ===== SERVICE CONFIGURATION =====
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# ===== REST INGESTOR SPECIFIC =====
REST_INGESTOR_LOG_LEVEL=INFO
REST_INGESTOR_RATE_LIMIT=1200
REST_INGESTOR_REQUEST_TIMEOUT=30
REST_INGESTOR_BACKFILL_BATCH_SIZE=1000

# ===== HEALTH CHECK =====
HEALTH_CHECK_PORT=8080
METRICS_PORT=8081