# Bitcoin Pipeline Test Environment Variables
# Copy this to .env and fill in your actual values

# Binance API Credentials (required for SBE testing)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# AWS LocalStack Configuration
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# Test Configuration
TEST_DURATION=30              # How long to run streaming tests (seconds)
LOG_LEVEL=DEBUG              # DEBUG, INFO, WARNING, ERROR
ENVIRONMENT=test

# Service Ports (for local testing)
REST_INGESTOR_PORT=8080
SBE_INGESTOR_PORT=8081
AGGREGATOR_PORT=8082

# LocalStack Endpoints
LOCALSTACK_ENDPOINT=http://localhost:4566
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://pipeline_user:pipeline_pass@localhost:5432/bitcoin_pipeline